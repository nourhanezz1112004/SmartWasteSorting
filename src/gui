"""CustomTkinter GUI for the Smart Waste Sorting App (real-time + image)"""

import customtkinter as ctk
from tkinter import filedialog
from PIL import Image, ImageTk
import cv2
from src import inference
from src.real_time import CameraWorker

ctk.set_appearance_mode("Dark")   # Dark / Light / System
ctk.set_default_color_theme("green")


class App(ctk.CTk):
    def __init__(self, model_path=None, class_indices=None):
        super().__init__()
        self.title("Smart Waste Sorting â€” Advanced")
        self.geometry("900x600")

        self.model_path = model_path
        self.class_indices = class_indices
        self.camera_worker = None

        self.create_widgets()

        if model_path:
            try:
                inference.load(model_path, class_indices)
            except Exception as e:
                print("Failed to load model:", e)

    # ---------------- UI SETUP ----------------
    def create_widgets(self):
        self.sidebar = ctk.CTkFrame(self, width=180)
        self.sidebar.pack(side="left", fill="y", padx=10, pady=10)

        ctk.CTkLabel(
            self.sidebar,
            text="â™» Smart Waste Sorting",
            font=("Helvetica", 16, "bold")
        ).pack(pady=15)

        ctk.CTkButton(self.sidebar, text="Home", command=self.show_home).pack(fill="x", pady=6)
        ctk.CTkButton(self.sidebar, text="Image Classify", command=self.show_image_tab).pack(fill="x", pady=6)
        ctk.CTkButton(self.sidebar, text="Real-Time", command=self.show_realtime_tab).pack(fill="x", pady=6)
        ctk.CTkButton(self.sidebar, text="Model Insights", command=self.show_model_tab).pack(fill="x", pady=6)
        ctk.CTkButton(self.sidebar, text="Exit", command=self.on_close).pack(side="bottom", pady=12)

        self.container = ctk.CTkFrame(self)
        self.container.pack(side="right", expand=True, fill="both", padx=10, pady=10)

        self.show_home()

    def clear_container(self):
        for w in self.container.winfo_children():
            w.destroy()

    # ---------------- HOME TAB ----------------
    def show_home(self):
        self.clear_container()
        frame = ctk.CTkFrame(self.container)
        frame.pack(expand=True, fill="both")

        ctk.CTkLabel(
            frame,
            text="Welcome to Smart Waste Sorting System",
            font=("Helvetica", 22, "bold")
        ).pack(pady=20)

        ctk.CTkLabel(
            frame,
            text="AI-powered waste classification using Deep Learning",
            font=("Helvetica", 14)
        ).pack(pady=10)

        status = "Loaded" if self.model_path else "Not Loaded"

        ctk.CTkLabel(
            frame,
            text=f"Model Status: {status}",
            text_color="green" if self.model_path else "red",
            font=("Helvetica", 13, "bold")
        ).pack(pady=10)

    # ---------------- IMAGE TAB ----------------
    def show_image_tab(self):
        self.clear_container()
        frame = ctk.CTkFrame(self.container)
        frame.pack(expand=True, fill="both")

        img_frame = ctk.CTkFrame(frame, width=420, height=320)
        img_frame.pack(pady=10)

        img_label = ctk.CTkLabel(img_frame, text="No Image Selected")
        img_label.pack(expand=True)

        result_label = ctk.CTkLabel(
            frame,
            text="Prediction: -",
            font=("Helvetica", 16, "bold"),
            text_color="green"
        )
        result_label.pack(pady=8)

        def open_image():
            path = filedialog.askopenfilename(
                filetypes=[("Image Files", "*.jpg;*.png;*.jpeg")]
            )
            if not path:
                return

            img = Image.open(path).resize((400, 300))
            img_tk = ImageTk.PhotoImage(img)
            img_label.configure(image=img_tk, text="")
            img_label.image = img_tk

            # ðŸ”„ Loading indicator
            result_label.configure(text="Processing...")
            self.update()

            frame_rgb = cv2.cvtColor(cv2.imread(path), cv2.COLOR_BGR2RGB)
            try:
                label, prob = inference.predict(frame_rgb)
            except Exception:
                label, prob = ("Model not loaded", 0.0)

            result_label.configure(text=f"Prediction: {label} ({prob:.2f})")

        ctk.CTkButton(frame, text="Open Image", command=open_image).pack(pady=6)

    # ---------------- REAL-TIME TAB ----------------
    def show_realtime_tab(self):
        self.clear_container()
        frame = ctk.CTkFrame(self.container)
        frame.pack(expand=True, fill="both")

        self.video_label = ctk.CTkLabel(frame, text="Camera Feed")
        self.video_label.pack(pady=8)

        btn_frame = ctk.CTkFrame(frame)
        btn_frame.pack(pady=6)

        ctk.CTkButton(btn_frame, text="Start Camera", command=self.start_camera).grid(row=0, column=0, padx=6)
        ctk.CTkButton(btn_frame, text="Stop Camera", command=self.stop_camera).grid(row=0, column=1, padx=6)

        # ðŸŸ¢ Camera Status
        self.camera_status = ctk.CTkLabel(
            frame,
            text="Camera Status: OFF",
            text_color="red",
            font=("Helvetica", 13, "bold")
        )
        self.camera_status.pack(pady=5)

        self.pred_label = ctk.CTkLabel(
            frame,
            text="Prediction: -",
            font=("Helvetica", 14, "bold")
        )
        self.pred_label.pack(pady=8)

    def update_video(self):
        if self.camera_worker and self.camera_worker.frame is not None:
            frame = self.camera_worker.frame
            frame_rgb = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
            img = Image.fromarray(frame_rgb).resize((640, 360))
            img_tk = ImageTk.PhotoImage(img)

            self.video_label.configure(image=img_tk, text="")
            self.video_label.image = img_tk

            label, prob = self.camera_worker.pred
            self.pred_label.configure(text=f"Prediction: {label} ({prob:.2f})")

        if self.camera_worker and self.camera_worker.running:
            self.after(20, self.update_video)

    def start_camera(self):
        if self.camera_worker and self.camera_worker.running:
            return

        self.camera_worker = CameraWorker(src=0)
        self.camera_worker.start()

        self.camera_status.configure(text="Camera Status: ON", text_color="green")
        self.pred_label.configure(text="Prediction: Processing...")

        self.after(100, self.update_video)

    def stop_camera(self):
        if self.camera_worker:
            self.camera_worker.stop()
            self.camera_worker = None

            self.video_label.configure(text="Camera stopped", image=None)
            self.pred_label.configure(text="Prediction: -")
            self.camera_status.configure(text="Camera Status: OFF", text_color="red")

    # ---------------- MODEL TAB ----------------
    def show_model_tab(self):
        self.clear_container()
        frame = ctk.CTkFrame(self.container)
        frame.pack(expand=True, fill="both")

        ctk.CTkLabel(
            frame,
            text="Model Insights (Training Plots)",
            font=("Helvetica", 18, "bold")
        ).pack(pady=10)

        try:
            img = Image.open("training_plots.png").resize((700, 400))
            img_tk = ImageTk.PhotoImage(img)
            lbl = ctk.CTkLabel(frame, image=img_tk, text="")
            lbl.image = img_tk
            lbl.pack()
        except Exception:
            ctk.CTkLabel(frame, text="No training plots found.").pack()

    def on_close(self):
        self.stop_camera()
        self.destroy()


